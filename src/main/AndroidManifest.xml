<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iplusplus.custopoly.view" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>

    <application
        android:name="com.iplusplus.custopoly.Custopoly"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <supports-screens
            android:largeScreens="true"
            android:normalScreens="false"
            android:xlargeScreens="true"
            android:smallScreens="false"
            />

        <activity
            android:name="com.iplusplus.custopoly.view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.ShopActivity"
            android:label="@string/title_activity_shop"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.GameMenuActivity"
            android:label="@string/title_activity_game_menu"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.InitActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.PreGameActivity"
            android:label="@string/title_activity_pre_game"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.ThemeSelectionActivity"
            android:label="@string/title_activity_theme_selection"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.iplusplus.custopoly.view.MusicActivity"
            android:label="MusicActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.PropertiesViewActivity"
            android:screenOrientation="landscape" >
            android:label="@string/title_activity_property_view" >
        </activity>
        <activity
            android:name="com.iplusplus.custopoly.view.NegotiationActivity"
            android:label="NegotiationActivity"
            android:screenOrientation="landscape">
        </activity>
        <service
            android:name= "com.iplusplus.custopoly.model.MusicPlayerService"
            android:label="MusicPlayerService"
        />
    </application>

</manifest>
